<div class="register-page row">
    <div class="section col-md-offset-3 col-md-6">
        <h1>
            <small>Register</small>
        </h1>

        <form {{bind-attr class=":form-horizontal registrationError:has-error"}} {{action "register" on="submit"}}>

            {{#if registrationError}}
                <div class="form-group">
                    <div class="col-sm-offset-5 col-sm-7">
                        <p class="form-control-static">{{registrationError}}</p>
                    </div>
                </div>
            {{/if}}

            <div class="form-group">
                <label for="signup-username" class="col-sm-5 control-label">Username</label>

                <div class="col-sm-7">
                    {{input type="text" class="form-control" id="signup-username" placeholder="username" value=username}}
                </div>
            </div>

            <div class="form-group">
                <label for="signup-password" class="col-sm-5 control-label">Password</label>

                <div class="col-sm-7">
                    {{input type="password" class="form-control" id="signup-password" placeholder="password" value=password}}
                </div>
            </div>

            <div {{bind-attr class=":form-group passwordWarning:has-warning"}}>
                <label for="signup-password-repeat" class="col-sm-5 control-label">Re-enter Password</label>

                <div class="col-sm-7">
                    {{input type="password" class="form-control" id="signup-password-repeat" placeholder="re-enter password" value=passwordRepeat}}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-5 col-sm-7">
                    <button type="submit" class="btn btn-default">Register</button>
                    <button type="button" class="btn btn-link" {{action "cancel"}}>
                        Cancel
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>