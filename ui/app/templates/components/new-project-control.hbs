{{#if formOn}}
    {{#if createFailedError}}
        <div class="form-group">
            <div class="alert alert-danger" role="alert">
                <strong>Error!</strong> Couldn't create the project
            </div>
        </div>
    {{/if}}

    <form {{bind-attr class=":form-inline newProjectError:has-error"}} {{action "createProject" on="submit"}}>
        <div class="form-group">
            <label class="sr-only" for="projectName">Project name</label>
            {{input type="text" class="form-control first-input" id="projectName" placeholder="Project name" value=newProjectName}}
        </div>
        <div class="form-group">
            <label class="sr-only" for="projectDescription">Description</label>
            {{input type="text" class="form-control" id="projectDescription" placeholder="Description" value=newProjectDescription}}
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <button type="button" class="btn btn-link" {{action "toggleFormOff"}}>Cancel</button>
    </form>
{{else}}
    <button type="button" class="btn btn-link" {{action "toggleFormOn"}}>New project</button>
{{/if}}
